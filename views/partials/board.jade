.board-container
  h1 SocketBall.biz {{game.rounds}} {{message}}
  img(src="img/header-instructions.png")
  .score.left {{game.team.left.score}}
  .score.right {{game.team.right.score}}
  .board
    .ball-container
      .ball(ball="true", init-x="score.ball.x.position", init-y="score.ball.y.position", vx="score.ball.x.velocity", vy="score.ball.y.velocity", interval="score.ball.x.interval", explode="explodeBall", score="score")
      .paddle.left(position="leftPosition", move-paddle="true")
      .paddle.right(position="rightPosition", move-paddle="true")
  .stats
    p Left Team:
      span {{game.team.left.players}} players
    p Right Team:
      span {{game.team.right.players}} players
  .goal
    h1 GOAL!!!
  button.start-button(animate explode) PLAY
