.board-container
  h1 SocketBall.biz
  img(src="img/header-instructions-2.png")
  .score.left {{game.team.left.score}}
  .score.right {{game.team.right.score}}
  .board
    .ball-container
      .ball(ball="true", init-x="initX", init-y="initY", score="score")
      .paddle.left(position="game.left.y", move-paddle="true", ng-class="paddleGlow")
      .paddle.right(position="game.right.y", move-paddle="true", ng-class="paddleGlow")
  .stats
    p Left Team:
      span {{game.team.left.players}} players
    p Right Team:
      span {{game.team.right.players}} players
    a.twitter(href="http://www.twitter.com/SocketBallz")
      img(src="img/twitter-icon.png")
  p.credits SocketBall was made by 
    a(href='http://twitter.com/hanelifou') hannah 
    / and 
    a(href='http://twitter.com/willdjthrill') will 
    / at 
    a(href='http://hackathon.launch.co') launch hackathon
  .goal(ng-class="{visible: excited, explode: excitedClimax}")
    h1 GOAL!!!
  button.start-button(explode, ng-click="playGame()", ng-show="!game") PLAY
  //.waiting(ng-show="!game")
    h1 WAITING FOR GAME TO START
